<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clSuccessfulAttackToast"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black_transparent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvShipHitToast"
        android:layout_width="186dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:text="Our attack was successful!"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivShipHit"
        app:layout_constraintStart_toEndOf="@+id/ivShipHit"
        app:layout_constraintTop_toTopOf="@+id/ivShipHit" />

    <ImageView
        android:id="@+id/ivShipHit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/captain_image" />
</androidx.constraintlayout.widget.ConstraintLayout>