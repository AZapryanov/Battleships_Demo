<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="player.PlayerOneActivity">


    <com.example.battleships_demo.custom_view.board.Board
        android:id="@+id/cvPlayerOneAttacks"
        android:layout_width="@dimen/board_size"
        android:layout_height="@dimen/board_size"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cvPlayerOneShips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:size="10" />

    <com.example.battleships_demo.custom_view.board.Board
        android:id="@+id/cvPlayerOneShips"
        android:layout_width="@dimen/board_size"
        android:layout_height="@dimen/board_size"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGoToPlayerTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:size="10" />

    <Button
        android:id="@+id/buttonGoToPlayerTwo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Go to player two"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>