    package="com.example.battleships_demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Battleships_Demo">
        <activity
            android:name=".game.GameActivity"
            android:exported="false" />
        <activity
            android:name=".ships_placement_round.ShipsPlacementActivity"
            android:exported="false" />
        <activity
            android:name=".player.PlayerTwoActivity"
            android:exported="false" />
        <activity
            android:name=".player.PlayerOneActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>